<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alex.glucosecoach.activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:id="@+id/content_bgreading"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/custom_border_bg"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/txt_last_bg"
            android:text="Last Reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_last_bg_value"
            android:text="No Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_last_bg"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_insreading"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/custom_border_ins"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/txt_last_ins"
            android:text="Insulin Taken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_last_ins_value"
            android:text="No Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_last_ins"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_carbsreading"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/custom_border_carbs"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/txt_last_carbs"
            android:text="Carbs Eaten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_last_carbs_value"
            android:text="No Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_last_carbs"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_exrcreading"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/custom_border_exer"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/txt_last_exrc"
            android:text="Exercise Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_last_exrc_value"
            android:text="No Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_last_exrc"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_start_predicition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Insulin Value"/>

</LinearLayout>
