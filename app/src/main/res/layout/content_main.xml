<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alex.glucosecoach.activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_bg"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@color/material_red"
        card_view:cardCornerRadius="4dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_bg_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:tint="@color/iconColor"/>

        <TextView
            android:id="@+id/txt_last_bg_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BG Value"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="100dp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_ins"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@color/material_green"
        card_view:cardCornerRadius="4dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_insulin_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:tint="@color/iconColor"/>

        <TextView
            android:id="@+id/txt_last_ins_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insulin"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="100dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_carbs"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@color/material_blue"
        card_view:cardCornerRadius="4dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_food_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:tint="@color/iconColor"/>

        <TextView
            android:id="@+id/txt_last_carbs_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="100dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_exer"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@color/material_purple"
        card_view:cardCornerRadius="4dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_exercise_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:tint="@color/iconColor"/>

        <TextView
            android:id="@+id/txt_last_exrc_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="100dp" />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_start_predicition"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:padding="12dp"
        android:text="Get Insulin Value"
        android:textColor="@color/white"
        android:background="@color/material_grey"/>

</LinearLayout>
